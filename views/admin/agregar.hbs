<div class="container">
  <div class="row">
    <div class="col-6 offset-3">
      <h2>Agregar una nueva promoción</h2>
      <form action="/admin/promociones/agregar" method="post">
        <div class="form-group">
          <input
            type="text"
            class="form-control"
            placeholder="Título"
            name="titulo"
          />
        </div>
        <div class="form-group">
          <textarea
            class="form-control"
            placeholder="Descripción"
            name="descripcion"
          > </textarea>
        </div>
        <div class="form-group">
          <input
            type="text"
            class="form-control"
            placeholder="Precio"
            name="precio"
          />
        </div>
        <button type="submit" class="btn btn-primary"> Guardar</button>
      </form>
      {{#if error}}
        <p>{{message}}</p>
      {{/if}}
    </div>
  </div>
</div>