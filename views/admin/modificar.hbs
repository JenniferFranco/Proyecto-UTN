<div class="container container-modificar">
  <div class="row">
    <div class="col-6 offset-3">
      <h2>Modificar la promocion {{promocion.id}}</h2>
      <form action="/admin/promociones/modificar" method="post" enctype="multipart/form-data">
        <input type="hidden" value="{{promocion.id}}" name="id" />
        <div class="form-group">
          <label for="">Título</label>
          <input
            type="text"
            class="form-control"
            name="titulo"
            value="{{promocion.titulo}}"
          />
        </div>
        <div class="form-group">
          <label for="">Descripción</label>
          <textarea class="form-control" name="descripcion">{{promocion.descripcion}}</textarea>
        </div>
        <div class="form-group">
          <label for="">Precio</label>
          <input
            type="text"
            class="form-control"
            name="precio"
            value="{{promocion.precio}}"
          />
        </div>
        <div class="form-group">
          <p>
            <label>Imagen: <input type="file" name="imagen" id="imagen"></label>
          </p>
          <p>
            <label><input type="checkbox" name="img_delete" id="img_delete" value="1">¿Desea eliminar la imagen actual?</label>
            <input type="hidden" name="img_original" value="{{promocion.img_id}}">
          </p>
        </div>
        <button type="submit" class="btn btn-primary"> Guardar</button>
      </form>
      {{#if error}}
        <p>{{message}}</p>
      {{/if}}
    </div>
  </div>
</div>